{
	"name": "EmployeeDataAnalysisMap",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ChicagoEmployeeData",
						"type": "DatasetReference"
					},
					"name": "ChicagoEmployeeData"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AnalyzedEmployeeData",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "SplitPoliceDepartmentData"
				},
				{
					"name": "TotalSalaryPoliceDept"
				},
				{
					"name": "SumByDepartmentStatusType"
				},
				{
					"name": "sortOutput"
				},
				{
					"name": "Union"
				},
				{
					"name": "JoinSource"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string,",
				"          Column_4 as string,",
				"          Column_5 as string,",
				"          Column_6 as string,",
				"          Column_7 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> ChicagoEmployeeData",
				"ChicagoEmployeeData split(equals(Column_3, 'POLICE'),",
				"     disjoint: false,",
				"     partitionBy('hash', 1)) ~> SplitPoliceDepartmentData@(PoliceDepartmentEmployees, RestOfTheDepartments)",
				"SplitPoliceDepartmentData@PoliceDepartmentEmployees aggregate(groupBy(Column_3,",
				"          Column_4,",
				"          Column_5),",
				"     SumOfEMPByDeptStatusType = sum(toInteger(Column_7)),",
				"     partitionBy('hash', 1)) ~> TotalSalaryPoliceDept",
				"SplitPoliceDepartmentData@RestOfTheDepartments aggregate(groupBy(Column_3,",
				"          Column_4,",
				"          Column_5),",
				"     SumByDepartmentStatusType = sum(toInteger(Column_7))) ~> SumByDepartmentStatusType",
				"SumByDepartmentStatusType sort(asc(Column_3, true),",
				"     asc(Column_4, true),",
				"     asc(Column_5, true),",
				"     partitionBy('hash', 1)) ~> sortOutput",
				"sortOutput, TotalSalaryPoliceDept union(byName: false)~> Union",
				"ChicagoEmployeeData, Union join(Union@Column_3 == ChicagoEmployeeData@Column_3",
				"     && Union@Column_4 == ChicagoEmployeeData@Column_4",
				"     && Union@Column_5 == ChicagoEmployeeData@Column_5,",
				"     joinType:'left',",
				"     broadcast: 'auto')~> JoinSource",
				"JoinSource sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}