{
	"name": "EmployeeDataAnalysisMap",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ChicagoEmployeeData",
						"type": "DatasetReference"
					},
					"name": "ChicagoEmployeeData"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "SplitPoliceDepartmentData"
				},
				{
					"name": "TotalSalaryByDepartment"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string,",
				"          Column_4 as string,",
				"          Column_5 as string,",
				"          Column_6 as string,",
				"          Column_7 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> ChicagoEmployeeData",
				"ChicagoEmployeeData split(equals(Column_3, 'POLICE'),",
				"     disjoint: false,",
				"     partitionBy('hash', 1)) ~> SplitPoliceDepartmentData@(PoliceDepartmentEmployees, RestOfTheDepartments)",
				"SplitPoliceDepartmentData@PoliceDepartmentEmployees aggregate(groupBy(Column_3,",
				"          Column_4,",
				"          Column_5),",
				"     SumOfEMPByDeptStatusType = sum(toInteger(Column_7)),",
				"     partitionBy('hash', 1)) ~> TotalSalaryByDepartment"
			]
		}
	}
}